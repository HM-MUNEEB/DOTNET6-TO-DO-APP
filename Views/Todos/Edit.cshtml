@model To_do_app_donet.Models.Todos

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Todos</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" class="card">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card-body">
                <div class="d-flex flex-row align-items-center">
                <input asp-for="Todo" class="form-control form-control-lg" type="text"  id="exampleFormControlInput1"
                    placeholder="Add new...">
                <div class="form-group form-check mx-3">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsDone"/>
                    </label>
                </div>
                <div>
                    <div class="form-group">
                        <input type="submit" value="Edit" class="btn btn-primary" />
                    </div>
                </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
